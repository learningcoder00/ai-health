{
  "expo": {
    "name": "AI健康管家",
    "slug": "ai-health-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4A90E2"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aihealthmanager.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4A90E2"
      },
      "package": "com.aihealthmanager.app",
      "permissions": [
        "CAMERA",
        "NOTIFICATIONS",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/logo_2.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "允许访问相机以拍摄药盒"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#4A90E2",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ]
    ]
  }
}

